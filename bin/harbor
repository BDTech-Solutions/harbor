#!/usr/bin/env bash
set -euo pipefail

SOURCE="${BASH_SOURCE[0]}"
while [ -h "$SOURCE" ]; do
  DIR="$(cd -P "$(dirname "$SOURCE")" && pwd)"
  SOURCE="$(readlink "$SOURCE")"
  [[ $SOURCE != /* ]] && SOURCE="$DIR/$SOURCE"
done

HARBOR_ROOT="$(cd -P "$(dirname "$SOURCE")/.." && pwd)"

source "$HARBOR_ROOT/lib/core.sh"

main "$@"
